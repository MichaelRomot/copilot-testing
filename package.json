{
  "name": "copilot-testing",
  "private": true,
  "version": "0.0.0",
  "packageManager": "bun@1",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:client": "cd packages/client && bun dev",
    "dev:server": "cd packages/server && bun run start:dev",
    "dev": "concurrently \"cd packages/server && bun run start:dev\" \"cd packages/client && bun dev\""
  },
  "devDependencies": {
    "concurrently": "^8.0.0"
  }
}
